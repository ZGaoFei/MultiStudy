<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtherMainActivity">

    <TextView
        android:id="@+id/other_tv_vlayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="打开VLayout页"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/other_tv_delegate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="打开VLayout delegate adapter 页"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/other_tv_vlayout"/>

    <TextView
        android:id="@+id/other_tv_one_plus_n"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="打开VLayout one plus n 页"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/other_tv_delegate"/>

    <TextView
        android:id="@+id/other_tv_staggered_grid"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="打开VLayout staggered grid 页"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/other_tv_one_plus_n"/>

    <TextView
        android:id="@+id/other_tv_vlayout2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="打开VLayout 2 页"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/other_tv_staggered_grid"/>

</androidx.constraintlayout.widget.ConstraintLayout>